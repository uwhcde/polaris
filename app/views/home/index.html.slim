- if user_signed_in?
  #recent
    .row
      .col-sm-12
        p Recently Viewed
    .row
      - i = 0
      - @posts.each do |post|
        - i = i + 1
        .col-lg-15.col-md-4
          .panel.panel-default
            .panel-body
              i.fa.fa-star
              h5 = truncate(post.title, :length => 25)
              .overlay
            .panel-footer
              .postType
                = post.postType
              .rating
                span.upVotes
                  i.fa.fa-thumbs-up
                  = post.upVotes
                .downVotes
                  i.fa.fa-thumbs-down
                  = post.downVotes
        - if i > 4 then break
