.post-container
  .row
    - @posts.each do |post|
      .col-lg-3.col-md-4.col-sm-6.col-xs-12
        .panel.panel-default
          .panel-body
            i.fa.fa-star.fa-lg.hide
            h4 = truncate(post.title, :length => 25)
            .overlay
          .panel-footer
            .postType
              = post.postType
            .rating
              span.upVotes
                i.fa.fa-thumbs-up.fa-lg
                = post.upVotes
              .downVotes
